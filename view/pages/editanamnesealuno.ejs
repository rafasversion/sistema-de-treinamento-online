                <input class="form-check-input" type="radio" id="aumento_forca_saude" name="objetivo" value="Aumento de força para benefícios a saúde em geral">
                <label class="form-check-label" for="objetivo">
                  Aumento de força para benefícios a saúde em geral
                </label>
                </div>

                <div class="pat-item">
                <input class="form-check-input" type="radio" id="outro" name="objetivo" value="Outro">
                <label class="form-check-label" for="objetivo">
                  Outro
                </label>
                </div>
                </div>
                </div>

            </div>
       

            <div class="mensagem-erro" id="error" style="display: none;"></div>
            <div class="mensagem-sucesso" id="success" style="display: none;"></div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary" id="b"
                    style="--bs-btn-border-radius: .6rem;">Enviar</button>
            </div>




        </form>
    

       </div>
<% } else {%>
 
